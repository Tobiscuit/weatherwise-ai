{
  "project": "AI Weather App",
  "version": "1.0.0",
  "archetypes": {
    "primary": "Sage",
    "secondary": "Caregiver"
  },
  "colors": {
    "palette": {
      "blue": {
        "100": "#EBF5FF",
        "300": "#B3D4FF",
        "500": "#4D94FF",
        "700": "#0052CC",
        "900": "#002A66"
      },
      "grey": {
        "50": "#F9FAFB",
        "100": "#F3F4F6",
        "200": "#E5E7EB",
        "300": "#D1D5DB",
        "400": "#9CA3AF",
        "500": "#6B7280",
        "600": "#4B5563",
        "700": "#374151",
        "800": "#1F2937",
        "900": "#111827"
      },
      "warm": {
        "100": "#FFF7ED",
        "300": "#FFE4C4",
        "500": "#FFB87A"
      },
      "white": "#FFFFFF",
      "black": "#000000",
      "success": "#22C55E",
      "warning": "#F59E0B",
      "error": "#EF4444"
    },
    "modes": {
      "light": {
        "background": {
          "default": "{colors.palette.grey.50}",
          "card": "{colors.palette.white}",
          "chatBubble": "{colors.palette.blue.100}"
        },
        "text": {
          "primary": "{colors.palette.grey.900}",
          "secondary": "{colors.palette.grey.600}",
          "accent": "{colors.palette.blue.700}",
          "inverse": "{colors.palette.white}"
        },
        "border": {
          "default": "{colors.palette.grey.200}"
        }
      },
      "dark": {
        "background": {
          "default": "{colors.palette.grey.900}",
          "card": "{colors.palette.grey.800}",
          "chatBubble": "{colors.palette.blue.900}"
        },
        "text": {
          "primary": "{colors.palette.grey.100}",
          "secondary": "{colors.palette.grey.400}",
          "accent": "{colors.palette.blue.300}",
          "inverse": "{colors.palette.grey.900}"
        },
        "border": {
          "default": "{colors.palette.grey.700}"
        }
      }
    }
  },
  "typography": {
    "fontFamily": {
      "sage": "'Lora', serif",
      "caregiver": "'Nunito Sans', sans-serif"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    "fontWeight": {
      "regular": 400,
      "medium": 500,
      "bold": 700
    },
    "lineHeight": {
      "none": 1,
      "tight": 1.25,
      "normal": 1.5,
      "relaxed": 1.75
    }
  },
  "spacing": {
    "0": "0",
    "1": "0.25rem",
    "2": "0.5rem",
    "3": "0.75rem",
    "4": "1rem",
    "5": "1.25rem",
    "6": "1.5rem",
    "8": "2rem",
    "10": "2.5rem",
    "12": "3rem",
    "16": "4rem",
    "20": "5rem",
    "24": "6rem"
  },
  "radii": {
    "sm": "0.25rem",
    "md": "0.5rem",
    "lg": "1rem",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)"
  },
  "components": {
    "button": {
      "primary": {
        "background": "{colors.palette.blue.700}",
        "text": "{colors.palette.white}",
        "hover": {
          "background": "{colors.palette.blue.900}"
        }
      },
      "secondary": {
        "background": "{colors.palette.grey.200}",
        "text": "{colors.palette.grey.800}",
        "hover": {
          "background": "{colors.palette.grey.300}"
        }
      }
    },
    "card": {
      "weather": {
        "padding": "{spacing.6}",
        "borderRadius": "{radii.lg}",
        "boxShadow": "{shadows.md}"
      }
    },
    "input": {
      "padding": "{spacing.3}",
      "borderRadius": "{radii.md}",
      "borderWidth": "1px",
      "focus": {
        "borderColor": "{colors.palette.blue.500}",
        "boxShadow": "0 0 0 3px rgba(77, 148, 255, 0.3)"
      }
    },
    "chatBubble": {
      "padding": "{spacing.4}",
      "borderRadius": "{radii.lg}",
      "fontFamily": "{typography.fontFamily.caregiver}",
      "fontSize": "{typography.fontSize.base}",
      "lineHeight": "{typography.lineHeight.relaxed}"
    }
  }
}